{
  "name": "emrtask-backend",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=4096' lerna run build",
    "clean": "lerna run clean",
    "test": "NODE_OPTIONS='--max-old-space-size=2048' lerna run test",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=2048' lerna run test:coverage",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "start": "NODE_OPTIONS='--max-old-space-size=2048' lerna run start",
    "dev": "NODE_OPTIONS='--max-old-space-size=2048 --expose-gc' lerna run dev --parallel",
    "security-audit": "npm audit && lerna exec -- npm audit",
    "docker:build": "lerna run docker:build",
    "docker:push": "lerna run docker:push",
    "typecheck": "NODE_OPTIONS='--max-old-space-size=3072' lerna run typecheck",
    "validate": "npm run lint && npm run typecheck && npm run test"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@jest/globals": "^29.6.0",
    "@jest/types": "^29.6.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^18.0.0",
    "@types/opossum": "^8.1.9",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.8",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-mock": "29.5.0",
    "lerna": "^7.1.0",
    "lint-staged": "^13.2.3",
    "mockdate": "^3.0.5",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.400.0",
    "@nestjs/cache-manager": "2.0.0",
