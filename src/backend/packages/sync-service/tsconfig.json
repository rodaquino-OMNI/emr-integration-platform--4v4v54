{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",

    // Build Configuration
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Strict Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // Enhanced Type Safety for CRDT Operations
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,

    // Decorator Support for Offline Data Sync
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Type Definitions
    "types": [
      "node",
      "jest"
    ],

    // Path Aliases
    "paths": {
      "@emrtask/shared": ["../shared/src/index.ts"],
      "@emrtask/shared/*": ["../shared/src/*"],
      "@emrtask/shared/middleware": ["../shared/src/middleware/index.ts"],
      "@emrtask/shared/middleware/*": ["../shared/src/middleware/*"],
      "@emrtask/shared/database": ["../shared/src/database/index.ts"],
      "@emrtask/shared/logger": ["../shared/src/logger/index.ts"],
      "@emrtask/shared/config": ["../shared/src/config/index.ts"],
      "@emrtask/shared/types/*": ["../shared/src/types/*"],
      "@emrtask/shared/constants": ["../shared/src/constants/index.ts"],
      "@emrtask/shared/healthcheck": ["../shared/src/healthcheck.ts"],
      "@emrtask/shared/metrics": ["../shared/src/metrics/index.ts"],
      "@emrtask/shared/utils/*": ["../shared/src/utils/*"]
    }
  },
  
  "include": [
    "src/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],

  "references": [
    {
      "path": "../shared"
    }
  ]
}