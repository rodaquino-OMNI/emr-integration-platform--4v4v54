{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@emrtask/shared": ["../shared/src/index.ts"],
      "@emrtask/shared/*": ["../shared/src/*"],
      "@emrtask/shared/middleware": ["../shared/src/middleware/index.ts"],
      "@emrtask/shared/middleware/*": ["../shared/src/middleware/*"],
      "@emrtask/shared/database": ["../shared/src/database/index.ts"],
      "@emrtask/shared/logger": ["../shared/src/logger/index.ts"],
      "@emrtask/shared/config": ["../shared/src/config/index.ts"],
      "@emrtask/shared/types/*": ["../shared/src/types/*"],
      "@emrtask/shared/constants": ["../shared/src/constants/index.ts"],
      "@emrtask/shared/healthcheck": ["../shared/src/healthcheck.ts"],
      "@emrtask/shared/metrics": ["../shared/src/metrics/index.ts"],
      "@emrtask/shared/utils/*": ["../shared/src/utils/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "types": ["node", "jest"],
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ]
}