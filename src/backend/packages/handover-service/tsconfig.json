{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",

    // Build Configuration
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    
    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    
    // Decorator Support for DI
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // Types
    "types": [
      "node",
      "jest"
    ],
    
    // Path Aliases
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "@emrtask/shared": ["../shared/src/index.ts"],
      "@emrtask/shared/*": ["../shared/src/*"],
      "@emrtask/shared/middleware": ["../shared/src/middleware/index.ts"],
      "@emrtask/shared/middleware/*": ["../shared/src/middleware/*"],
      "@emrtask/shared/database": ["../shared/src/database/index.ts"],
      "@emrtask/shared/logger": ["../shared/src/logger/index.ts"],
      "@emrtask/shared/config": ["../shared/src/config/index.ts"],
      "@emrtask/shared/types/*": ["../shared/src/types/*"],
      "@emrtask/shared/constants": ["../shared/src/constants/index.ts"],
      "@emrtask/shared/healthcheck": ["../shared/src/healthcheck.ts"],
      "@emrtask/shared/metrics": ["../shared/src/metrics/index.ts"],
      "@emrtask/shared/utils/*": ["../shared/src/utils/*"],
      "@task/types": ["../task-service/src/types/task.types"],
      "@task/services": ["../task-service/src/services/task.service"]
    }
  },
  
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  
  "references": [
    {
      "path": "../shared"
    }
  ]
}