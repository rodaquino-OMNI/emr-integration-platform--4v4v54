{
  "compilerOptions": {
    // ECMAScript Target and Module Configuration
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],

    // Type Declaration and Source Map Generation
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Build Optimization
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "disableSourceOfProjectReferenceRedirect": true,
    
    // Strict Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    
    // Code Quality Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    
    // Module Resolution and Interop
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@emrtask/shared": ["./packages/shared/src/index.ts"],
      "@emrtask/shared/*": ["./packages/shared/src/*"],
      "@emrtask/shared/middleware": ["./packages/shared/src/middleware/index.ts"],
      "@emrtask/shared/middleware/*": ["./packages/shared/src/middleware/*"],
      "@emrtask/shared/database": ["./packages/shared/src/database/index.ts"],
      "@emrtask/shared/logger": ["./packages/shared/src/logger/index.ts"],
      "@emrtask/shared/config": ["./packages/shared/src/config/index.ts"],
      "@emrtask/shared/types/*": ["./packages/shared/src/types/*"],
      "@emrtask/shared/constants": ["./packages/shared/src/constants/index.ts"],
      "@emrtask/shared/healthcheck": ["./packages/shared/src/healthcheck.ts"],
      "@emrtask/shared/metrics": ["./packages/shared/src/metrics/index.ts"],
      "@emrtask/shared/utils/*": ["./packages/shared/src/utils/*"]
    },

    // Decorator Support
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // Type Definitions
    "types": [
      "node",
      "jest"
    ],

    // Memory Optimization
    "preserveWatchOutput": false,
    "disableReferencedProjectLoad": true
  },
  
  // Project References for Microservices
  "references": [
    {
      "path": "./packages/shared/tsconfig.json"
    },
    {
      "path": "./packages/api-gateway/tsconfig.json"
    }
  ],
  
  // File Exclusions
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}