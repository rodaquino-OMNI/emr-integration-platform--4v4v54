<?xml version="1.0" encoding="utf-8"?>
<!-- 
    EMR Task Management Application Splash Background
    - Supports light/dark theme auto-switching
    - WCAG 2.1 AA compliant (contrast ratio â‰¥ 4.5:1)
    - Healthcare-optimized color scheme
    - Color-blindness safe implementation
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer using theme-aware color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background" />
        </shape>
    </item>

    <!-- Logo/icon layer with theme-aware tinting -->
    <item
        android:width="120dp"
        android:height="120dp"
        android:gravity="center">
        <bitmap
            android:src="@drawable/ic_launcher_foreground"
            android:tint="@color/color_primary"
            android:gravity="fill" />
    </item>

    <!-- Optional bottom accent line for visual polish -->
    <item android:bottom="48dp">
        <shape android:shape="rectangle">
            <size android:height="2dp" />
            <solid android:color="@color/color_primary" />
            <corners android:radius="1dp" />
        </shape>
    </item>
</layer-list>